<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/shape_gradient"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/id_title_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/param_10dp"
            android:layout_marginLeft="@dimen/param_10dp"
            android:layout_marginTop="@dimen/param_10dp"
            android:src="@mipmap/icon_leftwite" />

        <TextView
            android:id="@+id/id_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_18sp"

            />


        <ImageView
            android:id="@+id/id_title_share"
            android:layout_width="@dimen/param_24.5dp"

            android:layout_height="@dimen/param_27.5dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/param_15dp"
            android:layout_toLeftOf="@+id/id_title_rigtbut"
            android:src="@mipmap/icon_share_white"

            />

        <RelativeLayout
            android:id="@+id/id_title_rigtbut"
            android:layout_width="@dimen/param_34dp"
            android:layout_height="@dimen/param_28.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="22dp">


            <ImageView
                android:id="@+id/title_img"
                android:layout_width="@dimen/param_24.5dp"

                android:layout_height="@dimen/param_27.5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/icon_title_p1"


                />

            <TextView
                android:layout_width="@dimen/param_19dp"
                android:layout_height="@dimen/param_19dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/yuan_dian_lan"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
