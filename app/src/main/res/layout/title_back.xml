<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/shape_gradient"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:id="@+id/id_title_back"
            android:layout_width="@dimen/param_40dp"
            android:layout_height="match_parent">
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/param_10dp"
                android:layout_marginLeft="@dimen/param_10dp"
                android:layout_marginTop="@dimen/param_10dp"
                android:src="@mipmap/icon_leftwite" />
        </RelativeLayout>


        <TextView
            android:id="@+id/id_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:ellipsize="end"
            android:singleLine="true"
            android:maxEms="8"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_18sp"

            />



    </RelativeLayout>
</RelativeLayout>
