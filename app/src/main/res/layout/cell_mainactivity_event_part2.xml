<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="118dp"

    android:background="@color/white"


    android:orientation="vertical">


    <ImageView
        android:id="@+id/id_home_event2_img"
        android:layout_width="115dp"
        android:layout_height="86dp"
        android:layout_marginLeft="9.5dp"
        android:layout_marginTop="11.5dp"
        android:background="@mipmap/test_pic_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/id_home_event2_img"
        android:orientation="vertical"

        android:paddingLeft="@dimen/param_7.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"
            android:background="@drawable/shap_line"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="22dp"

                android:layout_alignTop="@+id/id_home_event2_zhuti"
                android:layout_toLeftOf="@+id/id_home_event2_zhuti"
                android:gravity="center_vertical"
                android:text="主题："
                android:textSize="13sp"

                />

            <TextView
                android:id="@+id/id_home_event2_zhuti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:ellipsize="end"
                android:maxLines="2"

                android:paddingTop="1.5dp"
                android:text="无偿献血活动"
                android:textColor="@color/dj_textcolors"

                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"
            android:background="@drawable/shap_line"
            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="22dp"

                android:gravity="center_vertical"
                android:text="主题："
                android:textSize="13sp"

                />

            <TextView
                android:id="@+id/id_home_event2_shijian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:ellipsize="end"
                android:maxLines="2"

                android:paddingTop="1.5dp"
                android:text="2018年4月27日"
                android:textColor="@color/dj_textcolor_org"

                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="22dp"

                android:layout_alignTop="@+id/id_home_event2_zhuti"
                android:layout_toLeftOf="@+id/id_home_event2_zhuti"
                android:gravity="center_vertical"
                android:text="状态："
                android:textSize="13sp"

                />

            <TextView

                android:id="@+id/id_home_event2_zhuangtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/yuanjiao_yiwancheng"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/param_2dp"
                android:paddingTop="1.5dp"
                android:text="已完成"
                android:textColor="@color/text_light_gray"
                android:textSize="15sp"
                android:visibility="gone" />


            <TextView

                android:id="@+id/id_home_event2_zhuangtai2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:background="@drawable/yuanjiao_jinxingzhong"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/param_2dp"
                android:paddingTop="1.5dp"
                android:text="进行中"
                android:textColor="@color/dj_jinxingzhong"

                android:textSize="15sp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>