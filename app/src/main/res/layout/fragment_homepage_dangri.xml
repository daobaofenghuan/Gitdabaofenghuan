<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        layout="@layout/title_show2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/param_45dp">
        <android.support.design.widget.TabLayout
            android:id="@+id/tl5"
            android:layout_width="@dimen/param_0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            app:tabBackground="@color/white"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/dj_bj_huang"
            app:tabIndicatorHeight="@dimen/param_2dp"
            app:tabMinWidth="@dimen/param_0dp"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/dj_textcolor_title2">


        </android.support.design.widget.TabLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/param_1dp"
        android:background="@color/base_gray_eee"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/individual_gray"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

</LinearLayout>