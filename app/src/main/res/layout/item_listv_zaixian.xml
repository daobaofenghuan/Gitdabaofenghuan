<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/param_67dp"
    android:background="@color/white"

    >

    <RelativeLayout
        android:id="@+id/id_sanhuiitemly1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/param_17dp"
        android:layout_marginRight="@dimen/param_115dp"
        android:layout_marginTop="@dimen/param_12dp"
        android:gravity="center_vertical">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/param_10dp"

            android:ellipsize="end"
            android:maxWidth="@dimen/param_180dp"
            android:singleLine="true"
            android:text="应急管理部有关负责人就有关负…"


            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/param_22dp"
        android:layout_below="@+id/id_sanhuiitemly1"
        android:layout_marginTop="@dimen/param_6dp"
        android:gravity="center_vertical"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/param_7dp"
            android:layout_marginLeft="@dimen/param_10dp"
            android:text="2018-5-2018-5-24 13:00 报名截止"
            android:textColor="@color/dj_textcolorhui"
            android:textSize="12dp"

            />




    </RelativeLayout>

    <View
        android:id="@+id/id_zaixian_view"
        android:layout_width="@dimen/param_1.5dp"
        android:layout_height="@dimen/param_25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/param_105dp"
        android:background="@color/dj_line_shu" />

<LinearLayout
    android:layout_marginRight="@dimen/param_17dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:orientation="vertical"
    android:gravity="center_horizontal"

    >

    <TextView
        android:id="@+id/id_weibaoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"



        android:layout_marginTop="@dimen/param_12dp"

        android:background="@drawable/yuanjiaoblue_12"
        android:paddingLeft="@dimen/param_6dp"
        android:paddingRight="@dimen/param_6dp"
        android:text="已过期"
        android:textColor="@color/white"
        android:textSize="@dimen/param_12dp" />

    <TextView
        android:id="@+id/id_weibaoming2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="@dimen/param_12dp"
        android:background="@drawable/yuanjiaohui_12"
        android:paddingLeft="@dimen/param_6dp"
        android:paddingRight="@dimen/param_6dp"
        android:text="已参与"
        android:textColor="@color/white"
        android:textSize="@dimen/param_12dp"
        android:visibility="gone" />
    <TextView
        android:layout_below="@+id/id_weibaoming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="@dimen/param_12dp"

        android:text="49人已答题"
        android:textColor="@color/dj_textcolors_hei"


        android:layout_marginTop="@dimen/param_7.5dp"
        />

</LinearLayout>


<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/param_0.5dp"
    android:background="@color/dj_dim"
    android:alpha="0.16"
android:layout_alignParentBottom="true"
    />


</RelativeLayout>