<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/white"

    android:orientation="vertical">

    <include
        android:id="@+id/id_title_event"
        layout="@layout/item_home_title"
        android:layout_width="match_parent"

        android:layout_height="@dimen/param_40dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="118dp"

        android:background="@color/white"


        >


        <ImageView
            android:id="@+id/id_home_event_img"
            android:layout_width="@dimen/param_115dp"
            android:layout_height="@dimen/param_86dp"
            android:layout_marginLeft="@dimen/param_9.5dp"
            android:layout_marginTop="@dimen/param_11.5dp"
            android:background="@mipmap/test_pic_20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/id_home_event_img"
            android:orientation="vertical"

            android:paddingLeft="@dimen/param_7.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/param_9.5dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/param_40dp"
                    android:layout_height="@dimen/param_22dp"

                    android:layout_alignTop="@+id/id_home_event_zhuti"
                    android:layout_toLeftOf="@+id/id_home_event_zhuti"
                    android:gravity="center_vertical"
                    android:text="主题："
                    android:textSize="@dimen/param_13dp"

                    />

                <TextView
                    android:id="@+id/id_home_event_zhuti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:ellipsize="end"
                    android:maxLines="2"

                    android:paddingTop="@dimen/param_1.5dp"
                    android:text="组织观看《厉害了，我的国》"
                    android:textColor="@color/dj_textcolors"

                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/param_2.5dp"
                android:layout_marginLeft="@dimen/param_40dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/param_0.5dp"
                android:background="@color/dj_dim"
                android:alpha="0.16"
                android:layout_marginRight="@dimen/param_22dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/param_9.5dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/param_40dp"
                    android:layout_height="@dimen/param_22dp"

                    android:gravity="center_vertical"
                    android:text="时长："
                    android:textSize="@dimen/param_13dp"

                    />

                <TextView
                    android:id="@+id/id_home_event_shijian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:ellipsize="end"
                    android:maxLines="2"

                    android:paddingTop="@dimen/param_1.5dp"
                    android:text="45分钟"
                    android:textColor="@color/dj_textcolor_org"

                    android:textSize="@dimen/param_15dp" />

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/param_2.5dp"
                android:layout_marginLeft="@dimen/param_40dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/param_0.5dp"
                android:background="@color/dj_dim"
                android:alpha="0.16"
                android:layout_marginRight="@dimen/param_22dp"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/param_9.5dp"
                android:orientation="horizontal"

                >


                <TextView

                    android:id="@+id/id_home_event_zhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="@dimen/param_2dp"
                    android:paddingTop="1.5dp"
                    android:text="1000人已学"
                    android:textColor="@color/dj_textcolors"

                    android:textSize="@dimen/param_15dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/param_5.5dp"
                    android:layout_toLeftOf="@id/id_edu_zan"
                    android:text="876赞" />

                <ImageView
                    android:id="@+id/id_edu_zan"
                    android:layout_width="@dimen/param_14dp"
                    android:layout_height="@dimen/param_14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/param_14dp"
                    android:src="@mipmap/icon_zan" />


            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/param_2.5dp"

                android:layout_width="match_parent"
                android:layout_height="@dimen/param_0.5dp"
                android:background="@color/dj_dim"
                android:alpha="0.16"
                android:layout_marginRight="@dimen/param_22dp"
                />

        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/param_0.5dp"
        android:background="@color/dj_dim"
        android:alpha="0.16"
        />


    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/param_142dp"
    android:orientation="vertical"
    >
    
    <TextView
        android:id="@+id/id_sevice_shenqing"
        android:layout_width="match_parent"
        android:layout_height="@dimen/param_40dp"
        android:layout_marginTop="@dimen/param_22dp"
        android:background="@drawable/yuanjiaored_8dp"
        android:layout_marginRight="@dimen/param_10dp"
        android:layout_marginLeft="@dimen/param_10dp"
        android:text="@string/service_help"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/param_15dp"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/param_40dp"
        android:layout_marginTop="@dimen/param_19dp"

        android:background="@drawable/yuanjiaowite_8dp"
        android:layout_marginRight="@dimen/param_10dp"
        android:layout_marginLeft="@dimen/param_10dp"
        android:text="@string/service_help"
        android:gravity="center"
        android:textColor="@color/dj_textcolor_org"
        android:textSize="@dimen/param_15dp"
        />


    
</LinearLayout>



</LinearLayout>