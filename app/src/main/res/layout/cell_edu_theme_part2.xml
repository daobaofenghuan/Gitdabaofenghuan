<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="118dp"

    android:background="@color/white"


    android:orientation="vertical">


    <ImageView
        android:id="@+id/id_home_event_img"
        android:layout_width="115dp"
        android:layout_height="86dp"
        android:layout_marginLeft="9.5dp"
        android:layout_marginTop="11.5dp"
        android:background="@mipmap/test_pic_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/id_home_event_img"
        android:orientation="vertical"

        android:paddingLeft="@dimen/param_7.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="22dp"

                android:layout_alignTop="@+id/id_home_event_zhuti"
                android:layout_toLeftOf="@+id/id_home_event_zhuti"
                android:gravity="center_vertical"
                android:text="主题："
                android:textSize="13sp"

                />

            <TextView
                android:id="@+id/id_home_event_zhuti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:ellipsize="end"
                android:maxLines="2"

                android:paddingTop="1.5dp"
                android:text="组织观看《厉害了，我的国》"
                android:textColor="@color/dj_textcolors"

                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/param_2.5dp"
            android:layout_marginLeft="@dimen/param_40dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/param_0.5dp"
            android:background="@color/dj_dim"
            android:alpha="0.16"
            android:layout_marginRight="@dimen/param_22dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"

            android:orientation="horizontal">

            <TextView
                android:layout_width="40dp"
                android:layout_height="22dp"

                android:gravity="center_vertical"
                android:text="时长："
                android:textSize="13sp"

                />

            <TextView
                android:id="@+id/id_home_event_shijian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:ellipsize="end"
                android:maxLines="2"

                android:paddingTop="1.5dp"
                android:text="45分钟"
                android:textColor="@color/dj_textcolor_org"

                android:textSize="15sp" />

        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/param_2.5dp"
            android:layout_marginLeft="@dimen/param_40dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/param_0.5dp"
            android:background="@color/dj_dim"
            android:alpha="0.16"
            android:layout_marginRight="@dimen/param_22dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9.5dp"
            android:orientation="horizontal"

            >


            <TextView

                android:id="@+id/id_home_event_zhuangtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:ellipsize="end"
                android:maxLines="2"
                android:padding="@dimen/param_2dp"
                android:paddingTop="1.5dp"
                android:text="1000人已学"
                android:textColor="@color/dj_textcolors"

                android:textSize="15sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/param_5.5dp"
                android:layout_toLeftOf="@id/id_edu_zan"
                android:text="876赞" />

            <ImageView
                android:id="@+id/id_edu_zan"
                android:layout_width="@dimen/param_14dp"
                android:layout_height="@dimen/param_14dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/param_14dp"
                android:src="@mipmap/icon_zan" />


        </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/param_2.5dp"

            android:layout_width="match_parent"
            android:layout_height="@dimen/param_0.5dp"
            android:background="@color/dj_dim"
            android:alpha="0.16"
            android:layout_marginRight="@dimen/param_22dp"
            />

    </LinearLayout>


</RelativeLayout>