<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">
    <include
        layout="@layout/title_edu"
        />

<android.support.design.widget.TabLayout
    android:id="@+id/tl4"

    android:background="@color/base_gray_eee"
    android:layout_width="match_parent"
    android:layout_height="@dimen/param_40dp"


    app:tabTextAppearance="@android:style/TextAppearance.Holo.Small"

    app:tabGravity="fill"
    app:tabIndicatorColor="@color/dj_bj_huang"
    app:tabIndicatorHeight="@dimen/param_2dp"
    app:tabMinWidth="@dimen/param_0dp"
    app:tabMode="fixed"
    app:tabSelectedTextColor="@color/dj_textcolor_title2"

    >


</android.support.design.widget.TabLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/individual_gray"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>




</LinearLayout>