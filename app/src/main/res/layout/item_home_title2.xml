<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@color/base_gray_eee"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
<RelativeLayout
    android:layout_marginTop="3.5dp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/param_32dp"
    android:background="@color/dj_bj_fen"
   >
<LinearLayout
    android:layout_width="27dp"
    android:layout_height="match_parent"
    android:background="@color/dj_bj_fen2"
    android:gravity="center"
    >
    <RelativeLayout
        android:layout_width="4.5dp"
        android:layout_height="10.5dp"
        android:background="@color/dj_bj_huang"
        />
</LinearLayout>

   <TextView
       android:id="@+id/id_hometitle_2"
       android:layout_width="60dp"
       android:layout_height="21dp"
       android:text="@string/homepage_part3_1"
    android:layout_marginTop="5dp"
       android:layout_marginBottom="6dp"
       android:layout_marginLeft="19dp"
       android:textColor="@color/dj_textcolor_title2"
       android:textSize="15sp"
       />
<ImageView
    android:id="@+id/home_title_rightimg"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_width="@dimen/param_7.5dp"
    android:layout_height="@dimen/param_10dp"
    android:src="@mipmap/icon_right"
    android:layout_marginRight="10.5dp"
    />

    <TextView
        android:id="@+id/id_item_rtext"
        android:layout_width="wrap_content"
        android:layout_height="18.5dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="6.5dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="7dp"
        android:text="@string/more"
        android:textSize="13sp" />

</RelativeLayout>

</LinearLayout>