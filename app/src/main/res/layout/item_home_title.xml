<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"

    android:orientation="vertical"
    android:gravity="center_vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/param_3.5dp"
        android:background="@color/dj_home_title_bj"
        android:alpha="0.19"
        />
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="@dimen/param_32dp"
    android:background="@color/dj_bj_fen"
   >
<LinearLayout
    android:layout_width="27dp"
    android:layout_height="match_parent"
    android:background="@color/dj_bj_fen2"
    android:gravity="center"
    >
    <RelativeLayout
        android:layout_width="4.5dp"
        android:layout_height="10.5dp"
        android:background="@color/dj_bj_huang"
        />
</LinearLayout>

   <TextView
       android:id="@+id/id_hometitle_1"
       android:layout_width="60dp"
       android:layout_height="21dp"
       android:text="@string/homepage_part2_1"
    android:layout_marginTop="5dp"
       android:layout_marginBottom="6dp"
       android:layout_marginLeft="19dp"
       android:textColor="@color/dj_textcolor_title"
       android:textSize="15sp"
       />
<ImageView
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_width="@dimen/param_7.5dp"
    android:layout_height="@dimen/param_10dp"
    android:src="@mipmap/icon_right"
    android:layout_marginRight="10.5dp"
    />

<TextView
    android:id="@+id/id_item_rtext"
    android:layout_width="wrap_content"
    android:layout_height="18.5dp"
    android:text="@string/more"
    android:layout_alignParentRight="true"
    android:layout_marginRight="24dp"
    android:textSize="13sp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="6.5dp"
    />

</RelativeLayout>

</LinearLayout>