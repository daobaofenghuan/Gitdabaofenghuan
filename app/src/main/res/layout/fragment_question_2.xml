                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/param_27dp"
                    android:text="1/68"
                    android:textColor="@color/dj_textcolors_huang"
                    android:textSize="@dimen/param_15dp" />

