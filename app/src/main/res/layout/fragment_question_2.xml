                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/param_10dp"
                android:layout_marginRight="@dimen/param_10dp"
                android:layout_marginTop="@dimen/param_15dp"
                android:background="@drawable/biankuang_dim_8dp"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/param_8dp"
