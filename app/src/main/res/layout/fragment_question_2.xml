                    android:layout_width="@dimen/param_8dp"
                    android:layout_height="@dimen/param_12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/param_13.5dp"
