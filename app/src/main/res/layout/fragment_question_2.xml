                android:paddingLeft="@dimen/param_10dp"
                android:paddingTop="@dimen/param_8dp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/id_checkbox_G"
                    style="@style/CustomRadioBtn"

