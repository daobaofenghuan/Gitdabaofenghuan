                    android:paddingLeft="@dimen/param_8dp"
                    android:text="D.中速低增长"
                    android:textColor="@color/dj_textcolors_hei2"
                    android:textSize="@dimen/param_13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/param_10dp"
